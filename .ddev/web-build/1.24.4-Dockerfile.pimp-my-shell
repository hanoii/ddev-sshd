    cd /opt/fzf-git.sh; \
    git init; \
    git remote add origin https://github.com/junegunn/fzf-git.sh.git; \
    git fetch --depth 1 origin ${FZFGIT_SHA1}; \
    git checkout FETCH_HEAD;

