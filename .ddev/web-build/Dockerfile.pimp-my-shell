USER $uid:$gid

# Fish plugins
RUN set -eux; \
    fish -c "curl -sL 'https://raw.githubusercontent.com/jorgebucaran/fisher/main/functions/fisher.fish' | source; \
    fisher install jorgebucaran/fisher@4.4.4"; \
    fish -c "fisher install IlanCosman/tide@v6.1.1"; \
    fish -c "fisher install edc/bass@v1.0"

# bun.sh
RUN set -eux; \
    BUN_VERSION=1.1.33; \
    curl -fsSL https://bun.sh/install | bash -s "bun-v${BUN_VERSION}"

# Go back to root
USER root:root

# kitty-terminfo from unstable, using its snapshot to make sure there's always gonna ver a version
# this can be updated manually by looking at
# https://snapshot.debian.org/binary/kitty-terminfo/
RUN set -eux; \
    pkg_url="https://snapshot.debian.org/archive/debian/20241018T203641Z/pool/main/k/kitty/kitty-terminfo_0.36.4-3_all.deb"; \
    mkdir -p /tmp/kitty-terminfo; \
    cd /tmp/kitty-terminfo; \
    wget -q "$pkg_url" -O kitty-terminfo.deb; \
    ar x kitty-terminfo.deb; \
    tar -xf data.tar.xz; \
    cp -R usr/share/terminfo/* /usr/share/terminfo; \
    cd; \
    rm -fr /tmp/kitty-terminfo;

# vim
RUN set -eux; \
    update-alternatives --set editor /usr/bin/vim.nox

# tte
# https://chrisbuilds.github.io/terminaltexteffects/
RUN set -eux; \
    PIPX_HOME=/opt/pipx PIPX_BIN_DIR=/usr/local/bin pipx install terminaltexteffects==0.11.0

